{
    "seed": 25285,
    "output_dir": "./logs/test-multiple-contrastive",
    "datasets": {
        "feat_type": "vgg",
        "num_init_clips": 64,
        "train": {
            "ann_file": "./data/Charades_STA/combined_charades_train_remove_repeat_action_videos.json",
            "vgg_feat_file": "./data/Charades_STA/Charades_vgg_rgb.hdf5",
            "c3d_feat_folder": null
        },
        "test": {
            "ann_file": "./data/Charades_STA/charades_multi_target.json",
            "vgg_feat_file": "./data/Charades_STA/Charades_vgg_rgb.hdf5",
            "c3d_feat_folder": null
        }
    },
    "model": {
        "num_clips": 32,
        "joint_space_size": 256,
        "conv1d": {
            "in_channel": 4096,
            "out_channel": 512,
            "pool_kernel_size": 2,
            "pool_kernel_stride": 2
        },
        "conv2d": {
            "in_channel": 512,
            "hidden_channel": 512,
            "kernel_size": 5,
            "num_layers": 8
        },
        "text_encoder": {
            "name": "bert"
        }
    },
    "loss": {
        "iou": {
            "weight": 1.0,
            "min_iou": 0.5,
            "max_iou": 1.0
        },
        "contrastive": {
            "weight": 0.005,
            "tau_video": 0.1,
            "tau_query": 0.1,
            "neg_video_iou": 0.5,
            "pos_video_topk": 3,
            "margin": 0.4
        }
    },
    "optimizer": {
        "base_lr": 0.0001,
        "bert_lr": 0.00001,
        "batch_size": 24,
        "epochs": 7,
        "bert_freeze_epoch": 0,
        "only_iou_epoch": 0,
        "clip_grad_norm": 5
    },
    "test": {
        "batch_size": 128,
        "nms_threshold": 0.5,
        "rec_metrics": [1, 5, 10],
        "iou_metrics": [0.5, 0.7]
    }
}
